<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_a_category"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022" />

    <ScrollView
        android:layout_width="409dp"
        android:layout_height="665dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/goToOnlineGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/online_games" />

            <Button
                android:id="@+id/goToMobileGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mobile_games" />

            <Button
                android:id="@+id/goToNoDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/no_device_required" />

            <Button
                android:id="@+id/goToLimitedSupplies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/limited_supplies_required" />

            <Button
                android:id="@+id/goToFreeGames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/free_games" />

            <Button
                android:id="@+id/goToPaid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/paid_games" />

            <Button
                android:id="@+id/goToOtherActivities"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/other_virtual_activities" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>